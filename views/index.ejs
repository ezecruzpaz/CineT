    }
    
    .video-text {
      position: absolute;
      top: 55%;
      left: 50%;
      transform: translate(-50%, -90%);
      width: 80%;
      text-align: left;
      font-size: 1.2em;

      
    }
    
    
    .video-container::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 99%;
      background-color: rgba(0, 0, 0, 0.5);
    }
    
    .fullscreen-video {
      width: 100%;
      height: 60vh; /* Modificado para hacerlo más responsivo */
